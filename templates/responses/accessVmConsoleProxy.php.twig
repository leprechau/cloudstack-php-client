    public $iframe;

    /** @var string */
    private $src;

    /**
     * Attempt to pull just the console proxy address out of the response iframe.
     * @return string
     */
    public function getIframeSrc(): string
    {
        if (!isset($this->src)) {
            if (is_string($this->iframe)) {
                preg_match('{<frame src=([\'"])([^\1]+)\1}', $this->iframe, $matches);
