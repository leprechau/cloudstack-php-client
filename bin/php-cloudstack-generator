#!/usr/bin/env php
<?php

if (PHP_SAPI !== 'cli') {
    echo __FILE__.' must be invoked via CLI'.PHP_EOL;
}

require __DIR__.'/../vendor/autoload.php';

if (!(bool)getenv('PHP_CLOUDSTACK_GENERATOR_ROOT')) {
    define('PHP_CLOUDSTACK_GENERATOR_ROOT', realpath(__DIR__.'/../'));
}

use MyENA\CloudStackClientGenerator\Application;

error_reporting(-1);

$application = new Application('PHP CloudStack Client Generator', '6.0.0');
$application->run();